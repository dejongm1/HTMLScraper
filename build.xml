<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Scraper">
    <!--this file was created by Eclipse Runnable JAR Export Wizard-->
    <!--ANT 1.7 is required                                        -->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/.."/>
    <property name="dir.jarfile" value="${dir.workspace}"/>
    <target name="create_run_jar">
    	<!-- TODO 
    		 Add a date to jar
    	     Move old jar to archive
    	     copy htmls files to jar destination for offline testing?
    	     package properties file
    	     package blacklist
    	     			-->
        <jar destfile="${dir.workspace}/HTMLScraper.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="com.mcd.scraper.ScraperMain"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/jsoup-1.10.3.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/commons-validator-1.6.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/commons-collections4-4.1.jar"/>
        	<zipfileset excludes="META-INF/*.SF" src="${dir.buildfile}/lib/log4j-1.2.17.jar"/>
            <fileset dir="${dir.buildfile}/bin"/>
            <!--<zipfileset dir="${dir.buildfile}/lib" includes="jsoup-1.10.3-sources.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="jsoup-1.10.3-javadoc.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="commons-validator-1.6-sources.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="commons-validator-1.6-javadoc.jar"/> -->
            <zipfileset dir="${dir.buildfile}/htmls" includes="*.html" prefix="htmls"/>
        </jar>
    </target>
</project>
